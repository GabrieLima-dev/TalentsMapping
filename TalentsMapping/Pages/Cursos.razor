@page "/cursos"
@inject CursoService CursoService

<h3>Cursos</h3>

@if (cursos == null)
{
    <p>Carregando cursos...</p>
}
else
{
    <ul>
        @foreach (var curso in cursos)
        {
            <li>
                <h4>@curso.nome</h4>
                <p>@curso.descricao</p>
                <p>Tarefas Diárias: @curso.tarefas_diarias</p>
                <p>Ambiente de Trabalho: @curso.ambiente_trabalho</p>
                <p>Faixa Salarial: @string.Join(" - ", curso.faixa_salarial)</p>
                <p>Média de Corte: @curso.media_corte</p>
            </li>
        }
    </ul>
}

@code {
    private List<Curso> cursos;

    protected override async Task OnInitializedAsync()
    {
        cursos = await CursoService.GetCursosAsync();
    }
}